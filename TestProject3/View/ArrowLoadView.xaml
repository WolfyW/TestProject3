<UserControl x:Class="TestProject3.View.ArrowLoad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestProject3.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Height="100">
        <StackPanel>
            <Ellipse Fill="LightGray" Height="200" Width="200"/>
            
            <Rectangle Width="5" Height="90" Fill="Black">
                <Rectangle.RenderTransform>
                    <TranslateTransform Y="-190" X="-2.5"/>
                </Rectangle.RenderTransform>
            </Rectangle>
            
            <Ellipse Fill="Black" Height="10" Width="10">
                <Ellipse.RenderTransform>
                    <TranslateTransform Y="-195"/>
                </Ellipse.RenderTransform>
            </Ellipse>
        </StackPanel>
        
        
    </Grid>
</UserControl>
