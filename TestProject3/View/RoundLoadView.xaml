<UserControl x:Class="TestProject3.View.RoundLoad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TestProject3.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Ellipse Fill="Aqua" Height="300" Width="300"></Ellipse>
            <Ellipse Fill="Green" Height="{Binding Value}" Width="{Binding Value}">
                <Ellipse.RenderTransform>
                    <TranslateTransform X="{Binding CenterY}"/>
                </Ellipse.RenderTransform>
            </Ellipse>
        </StackPanel>
    </Grid>
</UserControl>
